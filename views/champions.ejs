<% include partials/head_header %>
    <link rel="stylesheet" href="/stylesheets/champions.css">
<% include partials/head_footer %>
<% include partials/body_header %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
<script>
    new WOW().init();
</script>
<div class="container">
    <p></p>
    <h1>Champions</h1>
    <br>
        <% for(var i=0;i+1<data.length;i+=1) { %>
    <%if((i%2)==0){%>
    <div class="row wow animate fadeInLeft">
        <%}else{%>
        <div class="row wow animate fadeInRight">
            <%}%>
                <%if((i%2)==0){%>
                <div class="col-lg-3 order-1  col col1">
                    <%}else{%>
                    <div class="col-lg-3 order-2 col col1">
                        <%}%>
                    <img style="cursor: pointer" src=<%=data[i].ChampionIcon_URL%> data-toggle="modal" data-target="#<%=i%>">
                </div>
                    <%if((i%2)==0){%>
                <div class="col-lg-9 order-2 col col1">
                    <%}else{%>
                    <div class="col-lg-9 order-1 col col1">
                        <%}%>
                    <div class="data_champ">
                        <h4><span class="heading"><b><%= data[i].Name %></b></span> - <em><%= data[i].Title %></em></h4>
                        <p><%= data[i].Roles.substr(8) %></p>

                        <div class="ability">
                            <div class="row">
                                <div class="col">
                                    <img src="<%= data[i].Ability_1.URL %>" data-toggle="tooltip" data-placement="bottom" title="<%= data[i].Ability_1.Description %>">
                                    <p><%=data[i].Ability_1.Summary%></p>
                                </div>
                                <div class="col">
                                    <img src="<%= data[i].Ability_2.URL %>" data-toggle="tooltip" data-placement="bottom" title="<%= data[i].Ability_2.Description %>">
                                    <p><%=data[i].Ability_2.Summary%></p>
                                </div>
                                <div class="col">
                                    <img src="<%= data[i].Ability_3.URL %>" data-toggle="tooltip" data-placement="bottom" title="<%= data[i].Ability_3.Description %>">
                                    <p><%=data[i].Ability_3.Summary%></p>
                                </div>
                                <div class="col">
                                    <img src="<%= data[i].Ability_4.URL %>" data-toggle="tooltip" data-placement="bottom" title="<%= data[i].Ability_4.Description %>">
                                    <p><%=data[i].Ability_4.Summary%></p>
                                </div>
                                <div class="col">
                                    <img src="<%= data[i].Ability_5.URL %>" data-toggle="tooltip" data-placement="bottom" title="<%= data[i].Ability_5.Description %>">
                                    <p><%=data[i].Ability_5.Summary%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br><br><br><br>
                </div>
                </div>
                    <%var item=items.filter(champion_item=>champion_item.champion_id==data[i].id)%>
                    <div class="modal fade" id="<%=i%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header" style="text-align: center">
                                    <h4><span class="heading"><b><%= data[i].Name %></b></span> - <em><%= data[i].Title %></em></h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                    <%item.forEach(function (p) {%>
                                        <div class="col-lg-4">
                                            <%var k=p.Description.indexOf("]")%>
                                            <%var desc=p.Description.substring(k+1)%>
                                            <%var ability=p.Description.substring(1,k)%>

                                            <%if(p.item_type.indexOf("Legendary")!=-1){%>

                                            <img class="card_style" src="<%=p.itemIcon_URL%>">
                                            <span class="card_heading_leg"> <%=p.DeviceName%></span>
                                            <span class="card_desc_leg"><%=desc%></span>
                                            <span class="card_ability_leg"><%=ability%></span>

                                            <%}else{%>

                                            <div style="height: 350px;">
                                            <img class="card_style1" src="<%=p.itemIcon_URL%>">
                                            </div>
                                            <img class="frame" src="/images/frames/frame.png">
                                            <%if(p.item_type.indexOf("Common")!=-1){%>
                                            <img class="frame_crystal" src="/images/frames/frame_crystals/common.png">
                                            <%}%>
                                            <%if(p.item_type.indexOf("Rare")!=-1){%>
                                            <img class="frame_crystal" src="/images/frames/frame_crystals/rare.png">
                                            <%}%>
                                            <%if(p.item_type.indexOf("Epic")!=-1){%>
                                            <img class="frame_crystal" src="/images/frames/frame_crystals/epic.png">
                                            <%}%>
                                            <span class="card_heading"> <%=p.DeviceName%></span>
                                            <span class="card_desc"><%=desc%></span>
                                            <span class="card_ability"><%=ability%></span>
                                            <%}%>

                                        </div>
                                    <%})%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        <% }%>

</div>
<script>
$(document).ready(function() {
    $("body").tooltip({ selector: '[data-toggle=tooltip]' });
});
    </script>
<% include partials/body_footer %>